{% extends "baseLog.twig" %}
{% block title %}
	<title>Register</title>
{% endblock %}

{% block body %}
	<body class="bg-gradient-primary">
		<div class="container">
			<div class="card shadow-lg o-hidden border-0 my-5">
				<div class="card-body p-0">
					<div class="row">
						<div class="col-lg-5 d-none d-lg-flex">
							<div class="flex-grow-1 bg-register-image" style="background-image: url(images/dogs/image2.jpeg);"></div>
						</div>
						<div class="col-lg-7">
							<div class="p-5">
								<div class="text-center">
									<h4 class="text-dark mb-4">Créer votre compte</h4>
								</div>
								<form class="userCreate" id="userCreate" action="/">
									<div class="row mb-3">
										<div class="col-sm-12 mb-3 mb-sm-0" id="username-div">
											<input class="form-control form-control-user" type="text" id="username-register" aria-describedby="userNameHelp" placeholder="Username" name="username" onchange="lanceRecherche()">
											<div id="feed-back"></div>
										</div>
									</div>
									<div class="row mb-3">
										<div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="firstName" placeholder="Prénom" name="firstName"></div>
										<div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="lastName" placeholder="Nom de famille" name="lastName"></div>
									</div>
									<div class="row mb-3">
										<div class="col-sm-6 mb-3 mb-sm-0">
											<input class="form-control form-control-user" type="email" id="email" aria-describedby="emailHelp" placeholder="Adresse Email" name="email">
										</div>
										<div class="col-sm-6"><input class="form-control form-control-user" type="date" id="dateOfBirth" placeholder="Date de naissance" name="dateOfBirth"></div>
									</div>
									<div class="row mb-3">
										<div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="password" id="password" placeholder="Mot de passe" name="password"></div>
										<div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="password" id="repeat_password" placeholder="Confirmer le mot de passe" name="password_repeat"></div>
										<div class="col-sm-6 mb-3 mb-sm-0" id="feed-back-password"></div>

									</div>
									<div class="row mb-3">
										<label for="input-radio" class="form-label">Vous voulez vous inscrire en tant que...</label>
										<div class="form-check form-check-inline" id="input-radio">
											<input class="form-check-input" type="radio" name="option" id="optionCustomer" value="Customer" onchange="optionCustomerOnChange()">
											<label class="form-check-label" for="optionCustomer">Customer</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="option" id="optionCoach" value="Coach" onchange="optionCoachOnChange()">
											<label class="form-check-label" for="optionCoach">Coach</label>
										</div>
									</div>
									<button id="submition" class="btn btn-primary d-block btn-user w-100" type="submit" formmethod="POST">&nbsp;Créer mon compte</button>
									<hr>
									<hr>
								</form>
								<div class="text-center"></div>
								<div class="text-center">
									<a class="small" href="/login">Already have an account? Login!</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</body>
	</body>
</div></body>{% endblock %}</body>
